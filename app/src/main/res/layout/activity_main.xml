<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradation">

                    <Button
                        android:id="@+id/player1_minus_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1"
                        android:background="@color/clearButtonPressed"
                        android:text="⊖"
                        android:textSize="30dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/player1_cul_point"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/colorBlack"
                            android:textSize="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/player1_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="7"
                            android:text="20"
                            android:textColor="@color/colorBlack"
                            android:textSize="60dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </LinearLayout>
                    <Button
                        android:id="@+id/player1_plus_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1"
                        android:background="@color/clearButtonPressed"
                        android:text="⊕"
                        android:textSize="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradation2">

                    <Button
                        android:id="@+id/player2_minus_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1"
                        android:text="⊖"
                        android:background="@color/clearButtonPressed"
                        android:textSize="30dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/player2_cul_point"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/colorBlack"
                            android:textSize="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/player2_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="7"
                            android:text="20"
                            android:textColor="@color/colorBlack"
                            android:textSize="60dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/player2_plus_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1"
                        android:text="⊕"
                        android:background="@color/clearButtonPressed"
                        android:textSize="30dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center">





                    <Button
                        android:id="@+id/reset_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/resetbutton"
                        android:gravity="center"
                        android:shadowRadius="9"
                        android:text="↻"
                        android:textSize="30dp" />





                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/colorBlack">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/redo_button1"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:shadowRadius="9"
                                android:text="back"
                                android:background="@drawable/backbutton"
                                android:textSize="20dp" />
                            <Button
                                android:id="@+id/drain_button1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/neko"
                                android:shadowRadius="9"
                                android:textSize="30dp" />
                            <Button
                                android:id="@+id/poison_button1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/poison"
                                android:shadowRadius="9"
                                android:textSize="30dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/poisonScreen1"
                            android:visibility="gone"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <Button
                                    android:id="@+id/poison_minus_button1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:shadowRadius="9"
                                    android:background="@color/clearButtonPressed"
                                    android:textColor="@color/colorWhite"
                                    android:text="⊖"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/player1_poison_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/poison"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/colorBlack" />
                                <Button
                                    android:id="@+id/poison_plus_button1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:shadowRadius="9"
                                    android:background="@color/clearButtonPressed"
                                    android:textColor="@color/colorWhite"
                                    android:text="⊕"
                                    android:textSize="20dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/player1_poison_text"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:background="@color/colorWhite"
                                android:textColor="@color/colorBlack"
                                android:layout_margin="2dp"
                                android:gravity="center"
                                android:text="0" />
                        </LinearLayout>
                        <ListView
                            android:layout_height="match_parent"
                            android:id="@+id/player1ListView"
                            android:layout_width="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="0.7"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/textView"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                        <Button
                            android:id="@+id/redo_button2"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:shadowRadius="9"
                            android:text="back"
                            android:background="@drawable/backbutton"
                            android:textSize="20dp" />

                            <Button
                                android:id="@+id/drain_button2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/neko"
                                android:shadowRadius="9"
                                android:textSize="30dp" />
                            <Button
                                android:id="@+id/poison_button2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/poison"
                                android:shadowRadius="9"
                                android:textSize="30dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/poisonScreen2"
                            android:visibility="gone"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <Button
                                    android:id="@+id/poison_minus_button2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:shadowRadius="9"
                                    android:background="@color/clearButtonPressed"
                                    android:textColor="@color/colorWhite"
                                    android:text="⊖"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/player2_poison_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/poison"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/colorBlack" />
                                <Button
                                    android:id="@+id/poison_plus_button2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:shadowRadius="9"
                                    android:background="@color/clearButtonPressed"
                                    android:textColor="@color/colorWhite"
                                    android:text="⊕"
                                    android:textSize="20dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/player2_poison_text"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:background="@color/colorWhite"
                                android:textColor="@color/colorBlack"
                                android:layout_margin="2dp"
                                android:gravity="center"
                                android:text="0" />
                        </LinearLayout>

                        <ListView
                            android:layout_height="match_parent"
                            android:id="@+id/player2ListView"
                            android:layout_width="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="0.7"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>